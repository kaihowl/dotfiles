#!/usr/bin/expect
set timeout 10

spawn zsh "-i";
expect "➜";

# Clear up input with ctrl-w
send "\x17";

# Flush buffer
expect "*"

# Load script start up and ignore potentially insecure directories on GitHub
# actions runner.
send "export ZSH_DISABLE_COMPFIX=true; source ~/.zshrc\r";

expect {
  ":*:*\r" {puts "Found possible error output"; exit 1}
  "compinit: initialization aborted";
  expect "➜";
}

# Clear up input with ctrl-w
send "\x17";

# End the program with ctrl-d
send "\x04";

expect eof;

foreach {pid spawnid os_error_flag value} [wait] break;
if {$os_error_flag == 0} {
    puts "exit status: $value"
    exit $value
} else {
    puts "errno: $value"
    exit $value
}
EOF
echo "spawned process status" $?
rm -f $tmp_script_file
echo "done"
