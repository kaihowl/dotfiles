# Force Reload for older alacritty versions that do not file watch imports
echo "###ForceReload" >> "$DOTS/alacritty/config--alacritty--alacritty.yml.symlink"
sed -i.backup "/###ForceReload/d" "$DOTS/alacritty/config--alacritty--alacritty.yml.symlink"

vim_colorscheme=${color[-1]}

if [[ $vim_colorscheme = onehalf ]]; then
  vim_colorscheme="onehalf${background[-1]}"
fi

cat - > ~/.color/color.vim <<EOF
let g:edge_enable_italic = 1
let g:edge_disable_italic_comment = 0
let g:edge_diagnostic_line_highlight = 1
let g:edge_better_performance = 1
colorscheme ${vim_colorscheme}
set background=${background[-1]}
EOF
