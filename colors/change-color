#!/bin/zsh

set -e

mkdir -p ~/.color

background=(dark)
color=(edge)

if [[ -f ~/.color/current ]]; then
  IFS=":" read -r color background  < ~/.color/current
  color=("$color")
  background=("$background")
fi

zparseopts -K -- c:=color b:=background

echo "${color[-1]}:${background[-1]}" > ~/.color/current

echo "${color[-1]}"
echo "${background[-1]}"

cat - > ~/.color/alacritty.yml <<EOF
